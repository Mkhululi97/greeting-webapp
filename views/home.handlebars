<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/greet.css" />
    <title>Greetings Widget</title>
  </head>
  <body>
    <article>
      <div class="container">
        <h1 class="greeting">Greeting</h1>
        <form action="/greetings" method="POST">
          <label class="inputName" for="name">Please Enter Your Name:</label>
          <p class="error-text hidden">please enter your name</p>
          <div class="flex">
            <input
              type="text"
              placeholder="Enter your name"
              class="text-input"
              name="userInput"
            />
          </div>
          <div class="flex">
            <button class="btn greet-me-btn" type="submit">Greet Me</button>
            <h2 class="counter-text">{{counter}}</h2>
          </div>
          <div class="radio-btns">
            <input
              type="radio"
              name="language"
              value="isiZulu"
              class="radio-btn"
            />
            <label for="radio">isiZulu</label>
            <input
              type="radio"
              name="language"
              value="English"
              class="radio-btn"
            />
            <label for="radio">English</label>
            <input
              type="radio"
              name="language"
              value="isiXhosa"
              class="radio-btn"
            />
            <label for="radio">isiXhosa</label>
          </div>
          <p class="output-str">{{greetMsg}}</p>
        </form>

        <button class="btn reset-btn">Reset</button>
      </div>
    </article>
  </body>
</html>